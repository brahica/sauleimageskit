# -*- coding: utf-8 -*-

from PIL import Image, ImageFont, ImageDraw


def UpdateImage(filename, text):
    img = Image.open(filename)
    draw = ImageDraw.Draw(img)
    font = ImageFont.truetype("CentieSans.ttf", 50)
    draw.text((img.width - 300, img.height - 100), text, (0, 0, 0), font=font)
    img.save(filename.split('.')[0] + '_update' + '.' + filename.split('.')[1]

UpdateImage('image1.jpg', 'text')
    
